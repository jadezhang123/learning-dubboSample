<mapper namespace="own.jadezhang.learning.dubboSample.dao.auth.IAuthUserDAO">

    <sql id="Base_Column_List">
        id,
        name,
        password,
        phone,
        salt,
        status
    </sql>
    <insert id="insert" parameterType="own.jadezhang.learning.dubboSample.domain.auth.AuthUser">
        INSERT INTO auth_user (
		    name
		    ,password
		    ,phone
		    ,salt
		    ,status
        ) VALUES (
                #{name}
                ,#{password}
                ,#{phone}
                ,#{salt}
                ,#{status}
        )
        <selectKey resultType="java.lang.Long" keyProperty="id">
        	SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO auth_user (
            name
           ,password
           ,phone
           ,salt
           ,status
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (
                #{item.name}
                ,#{item.password}
                ,#{item.phone}
                ,#{item.salt}
                ,#{item.status}
            )
        </foreach>
    </insert>
    
    <!-- 更新 -->
    <update id="update" parameterType="own.jadezhang.learning.dubboSample.domain.auth.AuthUser">
        UPDATE auth_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="password!=null">
                password = #{password},
            </if>
            <if test="phone!=null">
                phone = #{phone},
            </if>
            <if test="salt!=null">
                salt = #{salt},
            </if>
            <if test="status!=null">
                status = #{status},
            </if>
        </trim>
        WHERE
        id = #{id}
    </update>
	
